generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Room {
  id          Int      @id @default(autoincrement())
  roomNumber  Int
  roomType    String
  capacity    Int?
  price       Float    
  isAvailable Boolean 
  floor       Int?
  description String?  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("rooms")
}

